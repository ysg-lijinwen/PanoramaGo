<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llComLinkFailed"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_main_white_bg"
    android:orientation="horizontal"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgComLinkFailed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_internal_link_failed" />

        <TextView
            android:id="@+id/tvComLinkFailed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="20dp"
            android:text="@string/internal_link_failed"
            android:textColor="@color/item_text_color_normal"
            android:textSize="@dimen/site_date_text_size" />
    </LinearLayout>


</LinearLayout>